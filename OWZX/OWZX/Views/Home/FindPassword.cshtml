@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="UTF-8"/>
    <meta content="企业管理，二当家，直销平台，让营销行云流水" name="keywords"/>
    <meta content="中国市场最通用的企业运营管理服务平台，客户管理，产品管理，营销管理集成在平台之上，功能强大，2016年开始运营" name="description"/>
    <meta content="width=device-width,initial-scale=1,maximum-scale=1" name="viewport"/>
    <meta content="telephone=no" name="format-detection"/>
    <title>重置密码</title>

    <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="/modules/css/home/login.css" rel="stylesheet" />
    
    <link rel="shortcut icon" href="/modules/images/logo_login.png"/>

    <script type="text/javascript" src="/Scripts/sea.js"></script>
    <script type="text/javascript" src="/Scripts/sea-config.js?v=@(ExpandClass.Version)"></script>
    <script type="text/javascript">
        seajs.use(["scripts/home/findpassword"], function (findpassword) {
            findpassword.init();
        });
    </script>
</head>
<body>
    <div class="login-body" >
        <div class="login-header">
           <div class="left header-logo" onclick="location.href='http://www.yunxiaokeji.com'">
                <div class="left"><img src="/modules/images/logo_login.png"  style="width:26px;"/></div>
                <div class="left headerTitle">云销科技</div>
                <div class="clear"></div>
            </div>
            <a class="btnRegister right" href="/Home/Login">登录</a>
       </div>

        <div class="main">
          
            <div class="loginTitle">重置密码</div>

            <div class="login">
                <div class="registerErr hide"></div>

                <div class="loginbar">
                    <input class="input icoUserName" id="loginName" type="text" placeholder="手机号" value="" maxlength="25"/>
                     <div class="error-body">
                        <div class="error-lump"></div>
                        <div class="error-msg"></div>
                    </div>
                </div>

                <div class="loginbar">
                    <div class="left">
                        <input class="input icoMobileCode" id="code" style="width:200px;" type="text"  placeholder="验证码" />
                    </div>
                    <input type="button" class="btnLogin right" id="btnSendMsg" value="获取验证码" style="width:100px;font-size:14px;"/>

                    <div class="clear"></div>
                     <div class="error-body" id="code-error">
                        <div class="error-lump"></div>
                        <div class="error-msg"></div>
                    </div>
                </div>

                <div class="loginbar">
                    <input class="input icoUserPwd" id="loginPWD" type="password" maxlength="25"/>
                     <div class="error-body">
                        <div class="error-lump"></div>
                        <div class="error-msg"></div>
                    </div>
                    <span class="txtBoxPassword" id="txtBoxPassword">密码,6-25位,至少包含字母/数字/符号两种不同组合</span>
                </div>

                <div class="loginbar">
                    <input class="input icoSurePwd" id="loginSurePWD" type="password" maxlength="25"/>
                     <div class="error-body">
                        <div class="error-lump"></div>
                        <div class="error-msg"></div>
                    </div>
                    <span class="txtBoxPassword" id="txtBoxSurePassword">确认密码</span>
                </div>

                <div class="btnLogin" id="btnUpdateUserPwd">重置</div>
             
            </div>
        </div>
        <div class="copyright">
            Copyright©2015-2016 <a href="http://www.yunxiaokeji.com">云销科技</a> 沪ICP备15042543号-2
        </div>
    </div>
</body>
</html>
